<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
android:padding="5dp"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    tools:context="com.chris.mcdelait.myapplication.pageTwo"
    android:background="#CCFFFF">


    <TextView
        android:text="getName ,"
        android:textColor="#003333"
        android:textStyle="italic"
        android:textSize="10pt"
        android:layout_width="wrap_content"
        android:layout_height="10px"
        android:layout_marginTop="21dp"
        android:id="@+id/getName"
        android:fontFamily="gisha"
        android:layout_marginStart="18dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true" />


    <EditText
        android:layout_width="100px"
        android:layout_height="120px"
        android:inputType="number"
        android:background="#fff"
        android:maxLength="3"
        android:ems="10"

        android:id="@+id/age"
        android:layout_alignTop="@+id/textView7"
        android:layout_alignStart="@+id/birth_date"
        android:layout_alignParentEnd="true"
        android:hint="current age" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="150px"
        app:srcCompat="@drawable/relationship"
        android:id="@+id/imageView12"
        android:layout_alignTop="@+id/textView5"
        android:layout_alignParentStart="true"
        android:background="#fff" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="120px"
        app:srcCompat="@drawable/age"
        android:id="@+id/imageView15"
        android:layout_alignTop="@+id/textView7"
        android:layout_toStartOf="@+id/textView9"
        android:background="#fff" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="date"
        android:ems="10"
        android:hint="dd/mm/yyyy"
        android:textColorHint="#103333"

        android:maxLength="10"
        android:id="@+id/birth_date"
        android:background="#fff"
        android:layout_alignBottom="@+id/textView9"
        android:layout_toEndOf="@+id/textView9"
        android:layout_alignTop="@+id/textView9" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="150px"
        android:fontFamily="times"
        android:textColor="#003333"
        tools:text="  What is the your relationship to the family head?"
        android:id="@+id/textView5"
        android:text="  What is the your relationship to the family head?"
         android:background="#CCCCCC"
        android:layout_below="@+id/textView13"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="14dp"
        android:layout_toEndOf="@+id/imageView12"
        android:textStyle="normal|bold"
        android:textSize="14sp" />

    <Spinner
        android:layout_width="296dp"
        android:layout_height="wrap_content"
        android:id="@+id/toHead"
        android:entries="@array/relationshipToHead"
        android:layout_below="@+id/textView5"
        android:layout_alignStart="@+id/region" />

    <TextView
        android:text="  Which Region Are You Currently ?"
        android:fontFamily="times"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView8"
        android:textColor="#003333"
        android:background="#CCCCCC"
        android:layout_below="@+id/toHead"
        android:textStyle="normal|bold"
        android:textSize="14sp"
        android:layout_alignParentEnd="true"
        android:layout_toEndOf="@+id/imageView12" />

    <TextView
        android:text="Date Of Birth ?"
        android:layout_width="400px"
        android:layout_height="120px"
        android:textStyle="bold"
        android:background="#CCCCCC"
        android:fontFamily="times"
        android:textColor="#003333"
        android:id="@+id/textView9"
        android:layout_centerVertical="true"
        android:layout_toEndOf="@+id/imageView13" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="120px"
        app:srcCompat="@drawable/date"
        android:id="@+id/imageView14"
        android:background="#fff"
        android:layout_alignTop="@+id/textView9"
        android:layout_alignParentStart="true"
        android:layout_toStartOf="@+id/textView9" />

    <TextView
        android:text="How Old Are You ?"
        android:textColor="#003333"
        android:textStyle="bold"
        android:layout_width="400px"
        android:layout_height="120px"
        android:id="@+id/textView7"
        android:background="#CCCCCC"
        android:layout_below="@+id/textView9"
        android:layout_marginTop="24dp"
        android:layout_toEndOf="@+id/imageView15"
        android:textSize="14sp" />

    <ImageButton
        android:layout_width="140px"
        app:srcCompat="@drawable/nation"
        android:id="@+id/imageButton2"
        android:layout_alignBottom="@+id/textView10"
        android:layout_alignParentStart="true"
        android:layout_height="50dp"
        android:background="#fff" />

    <Spinner
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:entries="@array/nationality"
        android:id="@+id/nationality"
        android:layout_marginBottom="66dp"
        android:layout_alignParentBottom="true"
        android:layout_toEndOf="@+id/imageButton2" />

    <TextView
        android:text="\nWhat is your nationality ?"
        android:layout_width="348px"
android:background="#CCCCCC"
        android:id="@+id/textView10"
        android:fontFamily="times"
        android:textStyle="bold"
        android:textColor="#003333"
        android:textAlignment="center"
        android:layout_height="50dp"
        android:layout_below="@+id/age"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="11dp"
        android:layout_toEndOf="@+id/imageButton2" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/region"
        android:id="@+id/imageView13"
        android:background="#fff"
        android:layout_alignBottom="@+id/region"
        android:layout_alignParentStart="true" />

    <Spinner
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:entries="@array/region"
        android:id="@+id/region"
        android:layout_below="@+id/textView8"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="12dp"
        android:layout_alignStart="@+id/textView8" />

    <TextView
        android:text="Family,Nationality And Birth Information"

        android:layout_width="wrap_content"
        android:textSize="9pt"
        android:id="@+id/textView13"
        android:background="#002"
        android:textColor="#fff"
        android:fontFamily="times"
        android:textAlignment="center"
        android:textStyle="bold"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:layout_toStartOf="@+id/twoNext" />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/ffz"
        android:id="@+id/twoNext"
        android:background="#002"
        android:layout_alignParentEnd="true"
        android:layout_alignParentTop="true"
        android:layout_above="@+id/textView5" />

</RelativeLayout>