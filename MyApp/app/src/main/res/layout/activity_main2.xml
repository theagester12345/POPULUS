<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="5dp"
    android:paddingRight="5dp"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.chris.mcdelait.myapplication.Main2Activity"
    android:background="#99CCCC">

    <TextView
        android:text="Economic Activity  And Disability\n Details"
        android:textAlignment="viewStart"
        android:layout_marginBottom="10px"
        android:layout_width="200px"
        android:layout_alignParentTop="true"
        android:id="@+id/textView16"
        android:textSize="7.5pt"
        android:textStyle="italic"
        android:layout_marginLeft="0px"
        android:layout_alignParentStart="true"
        android:background="#000"
        android:fontFamily="times"
        android:textColor="#fff"
        android:layout_height="50dp"
        android:layout_toStartOf="@+id/main2next" />

    <TextView
        android:text="Is "
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="17dp"
        android:layout_marginTop="25dp"
        android:id="@+id/textView17"
        android:layout_below="@+id/textView16"
        android:layout_alignParentStart="true" />


    <TextView
        android:text="Which sector are you currently working in ?"
        android:layout_width="650px"
        android:layout_height="140px"
        android:layout_marginTop="11dp"
        android:id="@+id/textView28"
        android:layout_below="@+id/textView24"
        android:background="#004444"
        android:textColor="#fff"
        android:layout_toEndOf="@+id/imageView18" />

    <Spinner
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:entries="@array/sector"
        android:layout_alignBottom="@+id/textView28"
        android:layout_toEndOf="@+id/textView24"
        android:id="@+id/emp_sector"
        android:background="#CCFFFF"
        android:layout_alignTop="@+id/textView28" />

    <ImageView
        android:layout_width="120px"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/status"
        android:id="@+id/imageView17"
        android:layout_above="@+id/textView28"
        android:layout_alignTop="@+id/textView24"
        android:background="#FFFFCC"
        android:layout_alignParentStart="true"
        android:layout_toStartOf="@+id/textView24" />

    <Spinner
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:entries="@array/employment_status"
        android:id="@+id/emp_status"
        android:background="#CCFFFF"
        android:layout_alignTop="@+id/textView24"
        android:layout_toEndOf="@+id/textView18"
        android:layout_above="@+id/textView28" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="140px"
        app:srcCompat="@drawable/sector"
        android:layout_above="@+id/textView27"
        android:layout_toStartOf="@+id/textView24"
        android:id="@+id/imageView18"
        android:background="#effaaa" />

    <TextView
        android:text="What is the name of the product or service you deliver ?"
        android:layout_width="650px"
        android:layout_height="150px"
        android:id="@+id/textView27"
        android:layout_marginTop="24dp"
        android:background="#004444"
        android:textColor="#fff"
        android:layout_below="@+id/textView28"
        android:layout_toEndOf="@+id/imageView18" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:ems="10"
        android:id="@+id/product"
        android:hint="eg. Driving"
        android:background="#CCFFFF"
        android:layout_alignTop="@+id/textView27"
        android:layout_toEndOf="@+id/textView28"
        android:layout_above="@+id/disabled" />

    <RadioGroup
        android:layout_width="220px"
        android:layout_height="110px"
        android:id="@+id/disabled"
        android:background="#CCFFFF"
        android:layout_below="@+id/textView27"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="9dp"
        tools:ignore="DuplicateIds">

        <RadioButton
            android:text="yes"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/radioButton8"
            android:layout_weight="1" />

        <RadioButton
            android:text="No"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/radioButton9"
            android:layout_weight="1" />
    </RadioGroup>

    <RadioGroup
        android:layout_width="220px"
        android:layout_height="110px"
        android:id="@+id/disabled"
        android:background="#CCFFFF"
        android:layout_below="@+id/textView27"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="9dp">

        <RadioButton
            android:text="yes"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/radioButton8"
            android:layout_weight="1" />

        <RadioButton
            android:text="No"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/radioButton9"
            android:layout_weight="1" />
    </RadioGroup>

    <RadioGroup
        android:layout_width="220px"
        android:layout_height="110px"
        android:id="@+id/disabled"
        android:background="#CCFFFF"
        android:layout_below="@+id/textView27"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="9dp">

        <RadioButton
            android:text="yes"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/radioButton8"
            android:layout_weight="1" />

        <RadioButton
            android:text="No"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/radioButton9"
            android:layout_weight="1" />
    </RadioGroup>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="150px"
        app:srcCompat="@drawable/product"
        android:id="@+id/imageView19"
        android:layout_alignTop="@+id/textView27"
        android:background="#FFFFCC"
        android:layout_toStartOf="@+id/textView27" />

    <RadioGroup
        android:layout_width="220px"
        android:layout_height="110px"
        android:id="@+id/disabled"
        android:background="#CCFFFF"
        android:layout_below="@+id/textView27"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="9dp"
        android:layout_toEndOf="@+id/imageView23">

        <RadioButton
            android:text="yes"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/radioButton8"
            android:layout_weight="1" />

        <RadioButton
            android:text="No"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/radioButton9"
            android:layout_weight="1" />
    </RadioGroup>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="80px"
        app:srcCompat="@drawable/blind"
        android:id="@+id/imageView21"
        android:layout_toStartOf="@+id/physical"
        android:background="#efffff"
        android:layout_alignBottom="@+id/sight" />

    <CheckBox
        android:text="Speech"
        android:layout_width="300px"
         android:id="@+id/speech"
        android:layout_height="80px"
        android:textSize="5pt"
        android:background="#00CC99"
        android:layout_alignBottom="@+id/imageView22"
        android:layout_alignStart="@+id/employed" />

    <ImageView
        android:layout_width="90px"
        android:layout_height="80px"
        app:srcCompat="@drawable/dumb"
        android:id="@+id/imageView23"
        android:background="#FFCCCC"
        android:layout_below="@+id/textView33"
        android:layout_toStartOf="@+id/speech"
        android:layout_alignBottom="@+id/speech" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="120px"
        app:srcCompat="@drawable/work"
        android:id="@+id/imageView16"
        android:background="#eff"
        android:layout_below="@+id/textView16"
        android:layout_alignParentStart="true"
        android:layout_alignBottom="@+id/textView18" />

    <TextView
        android:text="\nAre you working /employed ?"
        android:layout_width="650px"
        android:layout_height="150px"
        android:id="@+id/textView18"
        android:background="#004444"
        android:textColor="#fff"
        android:layout_below="@+id/textView16"
        android:layout_toEndOf="@+id/imageView16" />

    <TextView
        android:text="What is the employment status ?"
        android:layout_width="650px"
        android:layout_height="120px"
        android:id="@+id/textView24"
        android:background="#004444"
        android:textColor="#fff"
        android:layout_below="@+id/textView18"
        android:layout_marginTop="14dp"
        android:layout_toStartOf="@+id/emp_status" />

    <RadioGroup
        android:layout_width="250px"
        android:layout_height="150px"
        android:id="@+id/employed"
        android:background="#CCFFFF"
        android:layout_below="@+id/textView16"
        android:layout_alignEnd="@+id/product">

        <RadioButton
            android:text="Yes"
            android:textAlignment="center"
            android:layout_width="74dp"
            android:layout_height="24dp"
            android:id="@+id/radioButton6" />

        <RadioButton
            android:text="No"
            android:textAlignment="center"
            android:layout_width="73dp"
            android:layout_height="wrap_content"
            android:id="@+id/radioButton7" />
    </RadioGroup>

    <ImageView
        android:layout_width="90px"
        android:layout_height="80px"
        app:srcCompat="@drawable/deaf"
        android:id="@+id/imageView22"
        android:background="#FFFFCC"
        android:layout_toStartOf="@+id/hearing"
        android:layout_alignTop="@+id/sight" />

    <TextView
        android:text="Does he/she has any disability ?"
        android:layout_width="650px"
        android:layout_height="110px"
        android:layout_marginBottom="3dp"
        android:id="@+id/textView32"
        android:background="#004444"
        android:textColor="#fff"
        android:layout_alignTop="@+id/disabled"
        android:layout_toStartOf="@+id/product" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="110px"
        app:srcCompat="@drawable/physical"
        android:id="@+id/imageView20"
        android:background="#99CC99"
        android:layout_alignTop="@+id/textView32"
        android:layout_alignParentStart="true" />

    <CheckBox
        android:text="Hearing"
        android:id="@+id/hearing"

        android:layout_width="280px"
        android:layout_height="80px"
        android:textSize="5pt"
        android:background="#00CC99"
        android:layout_below="@+id/textView33"
        android:layout_toStartOf="@+id/imageView23" />

    <TextView
        android:text="Which aspect(s) is/are affected ? "
        android:layout_marginBottom="4dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView33"
        android:background="#004444"
        android:textAlignment="center"
        android:textColor="#fff"
        android:layout_below="@+id/textView32"
        android:layout_alignParentStart="true"
        android:layout_toStartOf="@+id/disabled"
        android:layout_alignParentEnd="true" />

    <CheckBox
        android:text="Sight"
        android:layout_width="wrap_content"
        android:layout_height="80px"
        android:id="@+id/sight"
        android:background="#00CC99"
        android:layout_below="@+id/textView33"
        android:textSize="5pt"
        android:layout_alignEnd="@+id/physical"
        android:layout_toEndOf="@+id/imageView21" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="80px"
        app:srcCompat="@drawable/physicalreal"
        android:id="@+id/imageView26"
        android:background="#fff"
        android:layout_alignBottom="@+id/physical"
        android:layout_toStartOf="@+id/textView32"
        android:layout_alignEnd="@+id/textView17"
        android:layout_alignTop="@+id/physical" />

    <CheckBox
        android:text="Physical"
        android:layout_width="wrap_content"
         android:layout_height="80px"
        android:textSize="5pt"
        android:id="@+id/physical"
        android:background="#00CC99"
        android:layout_marginTop="11dp"
        android:layout_below="@+id/imageView22"
        android:layout_toEndOf="@+id/imageView26" />

    <CheckBox
        android:text="Intellect"
        android:layout_width="wrap_content"
         android:id="@+id/intellect"
        android:layout_height="80px"
        android:textSize="5pt"
        android:background="#00CC99"
        android:layout_alignTop="@+id/imageView24"
        android:layout_toEndOf="@+id/imageView24" />

    <CheckBox
        android:text="Emotional"
        android:layout_width="300px"
         android:layout_height="80px"
        android:textSize="5pt"
        android:id="@+id/emotional"
        android:background="#00CC99"
        android:layout_alignBottom="@+id/imageView25"
        android:layout_toEndOf="@+id/imageView25" />

    <ImageView
        android:layout_width="90px"
        android:layout_height="80px"
        app:srcCompat="@drawable/intellect"
        android:id="@+id/imageView24"
        android:background="#99CC99"
        android:layout_alignTop="@+id/physical"
        android:layout_alignStart="@+id/imageView22" />

    <ImageView
        android:layout_width="90px"
         app:srcCompat="@drawable/emotional"
        android:layout_height="80px"
        android:textSize="5pt"
        android:id="@+id/imageView25"
        android:background="#336699"
        android:layout_below="@+id/imageView26"
        android:layout_toStartOf="@+id/physical"
        android:layout_marginTop="9dp" />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/ffz"
        android:layout_alignParentEnd="true"
        android:id="@+id/main2next"
        android:background="#000" />

</RelativeLayout>
