<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_house_details"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.chris.mcdelait.myapplication.HouseDetails"
    android:background="#123456">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/townOrVillage"
        android:layout_alignStart="@+id/textView39"
        android:layout_marginTop="18dp"
        android:id="@+id/textView41" />

    <TextView
        android:text="\nHouse Identification"
        android:layout_width="wrap_content"
        android:fontFamily="gisha"
        android:textColor="#fff"
        android:background="#000011"
        android:textAlignment="center"
        android:layout_height="210px"
        android:layout_alignParentTop="true"
        android:id="@+id/textView42"
        android:layout_alignParentEnd="true"
        android:layout_alignParentStart="true"
        android:textSize="9pt" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="180px"
        android:inputType="textPersonName"
        android:hint="eg.Winneba"
         android:ems="10"
        android:layout_marginTop="65dp"
        android:id="@+id/townOrVillage"
        android:layout_below="@+id/houseID"
        android:layout_alignParentEnd="true"
        android:background="#FFC"
        android:layout_toEndOf="@+id/textView38" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="180px"
        android:inputType="textPersonName"
         android:ems="10"
        android:id="@+id/houseID"
        android:hint="eg .234 NE"
        android:layout_alignTop="@+id/textView38"
        android:layout_alignParentEnd="true"
        android:alpha="1"
        android:ellipsize="start"
        android:background="#FFC"
        android:layout_toEndOf="@+id/textView38" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="180px"
        app:srcCompat="@drawable/town"
        android:layout_alignTop="@+id/textView39"
        android:id="@+id/imageView11"
        android:background="#FFFFCC"
        android:layout_alignParentStart="true"
        android:layout_alignEnd="@+id/textView41" />

    <ImageView
        android:layout_width="180px"
        android:layout_height="180px"
        app:srcCompat="@android:drawable/ic_menu_myplaces"
        android:background="#990099"
        android:id="@+id/imageView10"
        android:layout_alignTop="@+id/textView40"
        android:layout_alignEnd="@+id/textView41" />

    <TextView
        android:text="\nHouse Number"
        android:layout_width="wrap_content"
        android:layout_height="180px"
        android:id="@+id/textView38"
        android:background="#fface3"
        android:textColor="#000"
        android:fontFamily="gisha"

        android:layout_alignTop="@+id/imageView9"
        android:layout_alignParentStart="true"
        android:layout_marginStart="49dp" />

    <TextView
        android:text="\nTown/Village"
        android:layout_width="400px"
        android:fontFamily="times"
        android:layout_height="180px"
        android:id="@+id/textView39"
        android:background="#FFCCCC"
        android:textAlignment="center"
        android:textColor="#000"
        android:layout_alignTop="@+id/townOrVillage"
        android:layout_alignStart="@+id/textView38"
        android:layout_toStartOf="@+id/townOrVillage" />

    <ImageView
        android:layout_width="120px"
        android:layout_height="180px"
        app:srcCompat="@drawable/home"
        android:id="@+id/imageView9"
        android:layout_marginTop="22dp"
        android:background="#FFCCCC"
        android:layout_below="@+id/textView42"
        android:layout_alignEnd="@+id/textView41"
        android:layout_alignParentStart="true" />

    <Button
        android:text="Continue"
        android:textAllCaps="false"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/startRecord"
        android:background="#776"
        android:textColor="#fff"
        android:typeface="monospace"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="11dp"
        android:layout_alignParentEnd="true" />

    <Spinner
        android:layout_width="match_parent"
        android:layout_height="180px"
        android:id="@+id/regionOfHouse"
        android:background="#FFFFCC"
        android:entries="@array/region"
        android:layout_below="@+id/textView41"
        android:layout_toEndOf="@+id/textView39"
        android:layout_marginTop="14dp" />

    <TextView
        android:text="\nRegion"
        android:textAlignment="center"
        android:layout_width="290px"
        android:layout_height="180px"
        android:textColor="#000"
        android:fontFamily="times"
        android:id="@+id/textView40"

        android:background="#fface3"
        android:layout_alignTop="@+id/regionOfHouse"
        android:layout_toEndOf="@+id/imageView10" />
</RelativeLayout>
