<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_page_house_details"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.chris.mcdelait.myapplication.PageHouseDetails">

    <TextView
        android:text="Main House Details"
        android:layout_width="match_parent"
        android:layout_height="34dp"
        android:layout_alignParentTop="true"
        android:layout_marginTop="10dp"
        android:id="@+id/textView66"
        android:layout_alignParentStart="true"
        android:textAlignment="center"
        android:textSize="18sp"
        android:fontFamily="times"
        android:background="#687"
        android:textStyle="normal|bold"
        android:textColor="#fff" />

    <Spinner
        android:layout_width="match_parent"
        android:entries="@array/region"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/textView67"
        android:id="@+id/regionName"
        android:layout_toEndOf="@+id/textView68"
        android:layout_alignStart="@+id/townName" />

    <Button
        android:text="Save And Continue"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/houseNumber"
        android:layout_marginTop="47dp"
        android:id="@+id/continueButton"
        android:textAllCaps="false" />

    <TextView
        android:text="Town"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView69"
        android:layout_alignBottom="@+id/townName"
        android:layout_toEndOf="@+id/imageView57"
        android:textStyle="normal|bold|italic"
        android:fontFamily="times" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@android:drawable/ic_menu_myplaces"
        android:id="@+id/imageView56"
        android:background="#453"
        android:layout_alignBottom="@+id/regionName"
        android:layout_alignParentStart="true" />

    <TextView
        android:text="Region"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView67"
        android:layout_marginTop="68dp"
        android:layout_below="@+id/textView66"
        android:layout_alignEnd="@+id/textView71"
        android:layout_marginEnd="13dp"
        android:textStyle="normal|bold|italic"
        android:fontFamily="times" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/housedepict"
        android:layout_above="@+id/continueButton"
        android:layout_toStartOf="@+id/textView67"
        android:layout_marginEnd="16dp"
        android:id="@+id/imageView58" />

    <TextView
        android:text="House Number"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView71"
        android:fontFamily="times"
        android:textStyle="normal|bold|italic"
        android:layout_below="@+id/imageView58"
        android:layout_alignParentStart="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:ems="10"
        android:id="@+id/houseNumber"
        android:layout_marginTop="28dp"
        android:hint="eg. 123 NE"
        android:layout_below="@+id/areaName"
        android:layout_toEndOf="@+id/textView71" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:ems="10"
        android:id="@+id/areaName"
        android:hint="sub"
        android:layout_below="@+id/imageView57"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="10dp" />

    <TextView
        android:text="Area Name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView70"
        android:textAlignment="center"
        android:textStyle="normal|bold|italic"
        android:fontFamily="times"
        android:layout_alignParentStart="true"
        android:layout_alignBottom="@+id/areaName" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:ems="10"
        android:id="@+id/townName"
        android:hint="eg. Winneba"
        android:layout_centerVertical="true"
        android:layout_alignParentEnd="true" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/town"
        android:id="@+id/imageView57"
        android:layout_alignBottom="@+id/textView69"
        android:layout_alignParentStart="true" />

    <AutoCompleteTextView
         android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="district"
        android:id="@+id/districts"
        android:layout_above="@+id/imageView57"
        android:layout_alignParentEnd="true"
        android:layout_toEndOf="@+id/textView70" />

    <TextView
        android:text="District"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView68"
        android:textAlignment="center"
        android:textStyle="normal|bold|italic"
        android:fontFamily="times"
        android:layout_alignBaseline="@+id/districts"
        android:layout_alignBottom="@+id/districts"
        android:layout_alignParentStart="true" />
</RelativeLayout>
