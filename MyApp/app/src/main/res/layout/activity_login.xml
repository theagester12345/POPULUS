<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
     android:orientation="vertical"
    android:background="#150"
     android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.chris.mcdelait.myapplication.LoginActivity">

    <!-- Login progress -->

    <TextView
        android:text="\nPassword"
         android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:layout_below="@+id/textView23"
        android:textColor="#001"
        android:fontFamily="times"
        android:layout_marginTop="60dp"
        android:id="@+id/textView26"
        android:background="@color/colorPrimaryDark"
        android:textAlignment="center"
        android:layout_toStartOf="@+id/email" />

    <Button
        android:text="Sign In"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="45dp"
        android:elevation="4dp"
        android:id="@+id/signIn"
        android:fontFamily="times"
        android:textStyle="bold"
        android:layout_below="@+id/password"
        android:textAllCaps="false"
        android:layout_alignParentStart="true" />

    <TextView
        android:text="Not a member ? Click to register "
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView29"
        android:layout_below="@+id/signIn"
        android:linksClickable="true"
        android:textColor="#eac"
        android:layout_marginTop="20dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:textAlignment="center" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:inputType="textPassword"
        android:ems="10"
        android:background="#fff"
        android:id="@+id/password"
        android:layout_alignBottom="@+id/textView26"
        android:layout_alignParentEnd="true"
        android:layout_toEndOf="@+id/textView26" />

    <ProgressBar
        android:id="@+id/login_progress"
        style="?android:attr/progressBarStyleLarge"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="gone"
        android:layout_below="@+id/email"
        android:layout_toEndOf="@+id/textView26"
        android:layout_marginStart="55dp"
        android:layout_marginTop="39dp" />

    <ImageView
        app:srcCompat="@drawable/email"
        android:id="@+id/imageView53"
        android:layout_width="30dp"
        android:layout_height="40dp"
        android:background="#66CC99"
        android:layout_above="@+id/textView26"
        android:layout_alignParentStart="true" />

    <EditText
        android:background="#fff"
        android:layout_width="200dp"
        android:inputType="textEmailAddress"
        android:ems="10"
        android:fontFamily="times"
        android:id="@+id/email"
        android:layout_height="40dp"
        android:textSize="7pt"
        android:layout_above="@+id/textView26"
        android:layout_alignParentEnd="true"
        android:layout_toEndOf="@+id/textView23" />

    <TextView
        android:text="Authentication"
        android:layout_width="match_parent"
        android:layout_alignParentTop="true"
        android:layout_marginTop="9dp"
        android:id="@+id/textView65"
        android:layout_toEndOf="@+id/login_progress"
        android:layout_alignParentStart="true"
        android:textAlignment="center"
        android:textAllCaps="false"
        android:fontFamily="times"
        android:textStyle="normal|bold|italic"
        android:textSize="10pt"
        android:layout_height="50dp"
        android:textColor="#003333"
        android:background="#66FF99" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        app:srcCompat="@drawable/authenticate"
        android:id="@+id/imageView54"
        android:layout_alignTop="@+id/textView65"
        android:background="#ffd"
        android:layout_alignParentStart="true" />

    <TextView
        android:text="\nEmail"
        android:fontFamily="times"
        android:layout_width="70dp"
        android:layout_height="40dp"
        android:layout_marginTop="46dp"
        android:textColor="#001"
        android:id="@+id/textView23"
        android:background="@color/colorPrimaryDark"
        android:textAlignment="center"
        android:layout_below="@+id/textView65"
        android:layout_toEndOf="@+id/imageView53" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/password"
        android:layout_above="@+id/signIn"
        android:layout_toStartOf="@+id/textView26"
        android:id="@+id/imageView55"
        android:layout_alignTop="@+id/textView26"
        android:background="#ffc" />

</RelativeLayout>
