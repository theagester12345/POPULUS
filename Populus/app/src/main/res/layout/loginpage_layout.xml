<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/loginpage_layout"
android:background="@drawable/color_gradient"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.agada.populus.LoginActivity"
    >


    <android.support.design.widget.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="41dp">

    </android.support.design.widget.TextInputLayout>

    <android.support.design.widget.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:layout_marginBottom="61dp"
        android:id="@+id/textInputLayout"
        android:layout_above="@+id/signin_button"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">
    <EditText
        android:textColorHint="#ffffff"
        android:hint="Password"
        android:padding="5dp"
        android:textSize="22dp"
        android:inputType="textPassword"
        android:textColor="#ffffff"
        android:ems="10"
        android:id="@+id/password_editText"
        android:layout_width="match_parent"
        android:layout_height="45dp"
         />
    </android.support.design.widget.TextInputLayout>

    <Button style="@style/Widget.AppCompat.Button.Colored"
        android:textColor="#ffff"
        android:text="Sign In"
        android:layout_width="110dp"
        android:id="@+id/signin_button"
        android:background="@color/colorPrimary"
        android:layout_height="60dp"
        android:layout_marginBottom="34dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <ImageView
    android:layout_width="match_parent"
    app:srcCompat="@mipmap/ic_launcher"
    android:id="@+id/imageView2"
    android:layout_height="250dp"
        android:layout_weight="1"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"></ImageView>

    <android.support.design.widget.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/textInputLayout"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">
    <EditText
        android:layout_width="match_parent"
        android:textSize="22dp"
        android:padding="5dp"
        android:inputType="textEmailAddress"
        android:ems="10"
        android:hint="Email"
        android:textColorHint="#ffffff"
        android:textColor="#ffffff"
        android:id="@+id/email_editText"
        android:layout_height="45dp"
        android:layout_above="@+id/textInputLayout"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />
</android.support.design.widget.TextInputLayout>

    <Button style="@style/Widget.AppCompat.Button.Colored"
        android:text="Sign Up"
        android:textColor="#ffff"
        android:background="@color/colorPrimary"
        android:layout_height="60dp"
        android:id="@+id/signup_button"
        android:layout_width="110dp"
        android:layout_below="@+id/textInputLayout"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />


</RelativeLayout>
